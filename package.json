{
    "name": "portfolio",
    "version": "0.1.0",
    "author": "Matthew Parkin <matthewcparkin@gmail.com>",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "export": "next export",
        "prettier": "prettier \"**/*.+(js|jsx|json|ts|tsx|yml|yaml|css|scss|md|mdx)\" --list-different",
        "format": "yarn prettier --write",
        "commit": "cz"
    },
    "lint-staged": {
        "./src/**/*.{ts,js,jsx,tsx}": [
            "yarn lint --fix",
            "yarn format"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": "commitizen.config.js"
        }
    },
    "dependencies": {
        "babylonjs": "5.51.0",
        "babylonjs-loaders": "5.51.0",
        "gsap": "3.11.4",
        "next": "13.2.4",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.4.4",
        "@commitlint/config-conventional": "17.4.4",
        "@types/node": "18.15.3",
        "@types/react": "18.0.28",
        "@types/react-dom": "18.0.11",
        "@typescript-eslint/parser": "5.55.0",
        "cz-conventional-changelog": "3.3.0",
        "cz-customizable": "7.0.0",
        "eslint": "8.36.0",
        "eslint-config-next": "13.2.4",
        "husky": "8.0.3",
        "lint-staged": "13.2.0",
        "prettier": "2.8.4",
        "typescript": "5.0.2"
    }
}
