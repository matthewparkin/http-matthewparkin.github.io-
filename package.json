{
    "name": "portfolio",
    "version": "0.1.0",
    "author": "Matthew Parkin <matthewcparkin@gmail.com>",
    "private": true,
    "scripts": {
        "build": "next build",
        "commit": "cz",
        "dev": "next dev",
        "export": "next export",
        "format": "yarn prettier --write",
        "lint": "next lint",
        "prettier": "prettier \"**/*.+(js|jsx|json|ts|tsx|yml|yaml|css|scss|md|mdx)\" --list-different",
        "start": "next start",
        "prepare": "chmod ug+x ./node_modules/husky/lib/bin.js && husky install && chmod ug+x .husky/*"
    },
    "lint-staged": {
        "./src/**/*.{ts,js,jsx,tsx}": [
            "yarn lint --fix",
            "yarn format"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": "commitizen.config.js"
        }
    },
    "dependencies": {
        "babylonjs": "6.18.0",
        "babylonjs-loaders": "6.18.0",
        "gsap": "3.12.2",
        "next": "13.4.19",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.7.1",
        "@commitlint/config-conventional": "17.7.0",
        "@types/node": "20.5.6",
        "@types/react": "18.2.21",
        "@types/react-dom": "18.2.7",
        "@typescript-eslint/parser": "6.4.1",
        "commitizen": "4.3.0",
        "cz-conventional-changelog": "3.3.0",
        "cz-customizable": "7.0.0",
        "eslint": "8.48.0",
        "eslint-config-next": "13.4.19",
        "husky": "8.0.3",
        "lint-staged": "14.0.1",
        "prettier": "3.0.2",
        "typescript": "5.2.2"
    }
}
